<div class="container">
    <h1>Listado de libros</h1>
    <hr>
    <ul>
        {{#each allBooks}}
        <li>{{title}} | <a href="/libros/detalles/{{id}}">info</a>

            {{#if ../isAdmin}}
            |
            <a href="/libros/editar?book_id={{id}}">editar</a>
            |
            <a href="#" style="color: red">eliminar *</a>
            {{/if}}

            {{#if ../isEditor}}
            |
            <a href="/libros/editar?book_id={{id}}">editar</a>
            {{/if}}

        </li>
        {{/each}}
    </ul>
    <hr>
    <a href="/" class="btn btn-dark">Volver al incio</a>
</div>


{{#if msg}}
<div id="message">
    <p>{{msg}}</p>
</div>
{{/if}}